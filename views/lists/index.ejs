<%- include('partials/head.ejs') %> 
    <%- include('partials/navbar.ejs') %> 
        <%- include('partials/sidebar.ejs') %> 
            <div class="col-md-9 album py-5 bg-light">
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <% for (let l of toDoList) { %> 
                        <div class="col">
                            <div class="card list-group-item-action">
                                <div class="card-body ">
                                    <h5 class="card-title"><%= l.listName %></h5> 
                                        <a href="/lists/<%= l.listId %>"class="stretched-link"></a>
                                            <ul class="list-group list-group-flush-action">
                                                <% for (let i = 0; i < l.listItems.length; i ++) { %>     
                                                <li class="list-group-item"><%= l.listItems[i] %></li>
                                                <% } %> 
                                            </ul> 
                                </div>
                            </div>
                            <div class="card">
                                <div class="bg-light">
                                    <button class="btn btn-light btn dropdown-toggle-end" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                                        </svg>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" href="#">Share</a></li>
                                        <li><a class="dropdown-item" href="#">Color</a></li>
                                        <li><a class="dropdown-item" href="/lists/<%= l.listId %>/?_method=DELETE">Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    <% } %> 
                </div>
            </div>
        <%- include('partials/footer.ejs') %>

        

 