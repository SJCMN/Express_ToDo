<%- include('partials/head.ejs') %> 
    <%- include('partials/navbar.ejs') %> 
        <%- include('partials/sidebar.ejs') %> 
            <div class="col py-5 bg-light">
                <div class="col">
                    <div class="card list-group-item-action">
                        <div class="card-body">
                            <h2 class="card-title"><%= list.listName %></h2> 
                                <ul class="list-group list-group-flush-action">
                                    <% for (let i = 0; i < list.listItems.length; i ++) { %>
                                        <div class="input-group flex-nowrap">
                                            <span class="btn btn-outline-dark input-group-text" id="addon-wrapping">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-minus" viewBox="0 0 16 16">
                                                    <path d="M5.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z"/>
                                                    <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z"/>
                                                  </svg>
                                            </span>
                                            <input type="text" class="form-control" placeholder="<%= list.listItems[i] %>" aria-label="Username" aria-describedby="addon-wrapping">
                                          </div>
                                       
                                    <% } %> 
                                    <input class="list-group-item" type="text" placeholder="new item" aria-label="new item">
                                </ul>
                        </div> 
                    </div>
                    <div class="card">
                        <div class="bg-light">
                            <button class="btn btn-light btn dropdown-toggle-end" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                                </svg>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="#">Sort A - Z</a></li>
                                <li><a class="dropdown-item" href="/lists/<%= list.listId %>">Delete Selected</a></li>
                                <form method="POST" action="/lists/?_method=DELETE">
                                    <li><a class="dropdown-item" href="/lists/<%= list.listId %>/?_method=DELETE">Delete List</a></li>
                                </form>
                        
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
<%- include('partials/footer.ejs') %>
